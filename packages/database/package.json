{
  "name": "@dadgic/database",
  "version": "1.0.0",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build:tsc": "tsc",
    "fix-imports": "node post-build.js",
    "build": "npm run clean && npm run build:tsc && npm run fix-imports",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "db:migrate": "tsx src/cli/migrate-with-env.ts",
    "db:status": "tsx src/cli/migrate-with-env.ts status",
    "db:backup": "tsx src/cli/migrate-with-env.ts backup create",
    "migrate:up": "tsx src/cli/migrate-with-env.ts migrate up",
    "migrate:history": "tsx src/cli/migrate-with-env.ts migrate history"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "default": "./dist/*.js"
    }
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.38.0",
    "tsc-alias": "^1.8.16"
  },
  "devDependencies": {
    "dotenv": "^16.6.1",
    "tsx": "^4.20.3",
    "typescript": "^5.0.0"
  }
}
