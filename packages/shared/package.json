{
  "name": "@dadgic/shared",
  "version": "1.0.0",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./services/*": {
      "types": "./dist/services/*.d.ts",
      "default": "./dist/services/*.js"
    }
  },
  "scripts": {
    "build:tsc": "tsc",
    "fix-imports": "node post-build.js", 
    "build": "npm run clean && npm run build:tsc && npm run fix-imports",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "monitor": "tsx src/monitoring/cli/monitor.ts",
    "monitor:health": "tsx src/monitoring/cli/monitor.ts health",
    "monitor:errors": "tsx src/monitoring/cli/monitor.ts errors",
    "monitor:stats": "tsx src/monitoring/cli/monitor.ts stats"
  },
  "dependencies": {
    "@dadgic/database": "file:../database",
    "tsc-alias": "^1.8.16"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "typescript": "^5.3.3"
  }
}
